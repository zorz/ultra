{
  "name": "ultra",
  "version": "0.1.0",
  "description": "A terminal-native code editor with Sublime Text ergonomics and AI capabilities",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "ultra": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --target=bun-darwin-arm64 ./src/index.ts --outfile ultra",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.2",
    "typescript": "^5.9.3"
  }
}
